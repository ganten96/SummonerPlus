<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".LoginActivity"
                android:background="#ff233f52"
                android:id="@+id/LoginContainer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/summonerName"
        android:id="@+id/summonerName"
        android:layout_marginStart="25dp"
        android:layout_marginTop="166dp"
        android:textColor="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summonerNameInput"
        android:editable="true"
        android:hint="Summoner Name"
        android:enabled="true"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:layout_marginLeft="21dp"
        android:layout_below="@+id/summonerName"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/passwordField"
        android:id="@+id/password"
        android:textColor="#ffffffff"
        android:layout_below="@+id/summonerNameInput"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="21dp"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordInput"
        android:enabled="true"
        android:editable="true"
        android:hint="Password"
        android:password="true"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:layout_marginLeft="21dp"
        android:layout_below="@+id/password"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/LogInButton"
        android:layout_below="@+id/passwordInput"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp"
        android:typeface="normal"
        android:layout_toEndOf="@+id/summonerName"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/dontHaveOne"
        android:id="@+id/dontHave"
        android:textColor="#ffffffff"
        android:layout_marginBottom="25dp"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/summonerName"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Continue"
        android:id="@+id/button"
        android:layout_alignTop="@+id/dontHave"
        android:layout_toEndOf="@+id/dontHave"
        android:layout_marginStart="27dp"
        android:onClick="onContinueClick"/>
</RelativeLayout>
