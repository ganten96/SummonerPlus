<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                tools:context=".LoginActivity"
                android:background="#ff233f52"
                android:id="@+id/LoginContainer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/summonerName"
        android:id="@+id/summonerName"
        android:textColor="#ffffffff"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/summonerNameInput"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/summonerNameInput"
        android:editable="true"
        android:hint="Summoner Name"
        android:enabled="true"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:layout_above="@+id/password"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/passwordField"
        android:id="@+id/password"
        android:textColor="#ffffffff"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/passwordInput"/>

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/passwordInput"
        android:enabled="true"
        android:editable="true"
        android:hint="Password"
        android:password="true"
        android:textColor="#ffffffff"
        android:textColorHint="#ffffffff"
        android:layout_above="@+id/LogInButton"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/LogInButton"
        android:typeface="normal"
        android:layout_above="@+id/registerButton"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/registerButton"
        android:onClick="LogIn"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/registerButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_alignParentEnd="true"
        android:onClick="onRegisterClick"/>
</RelativeLayout>
