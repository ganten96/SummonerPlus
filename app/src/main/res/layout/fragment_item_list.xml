<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="summoner.plus.ItemListFragment"
             android:padding="6dip">

    <ListView
        android:id="@+id/item_list"
        android:layout_width="wrap_content"
        android:layout_height="450dp"/>

    <EditText
        android:layout_width="275dp"
        android:id="@+id/buildName"
        android:hint="Build Name"
        android:layout_below="@id/item_list"
        android:layout_height="wrap_content"
        android:textColorHint="#ffffffff"
        android:textColor="#ffffffff" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/saveItemBuild"
        android:text="Save"
        android:textColor="#ffffffff"
        android:layout_alignBottom="@+id/buildName"
        android:layout_alignEnd="@+id/item_list"
        android:onClick="SaveItemBuild" />
</RelativeLayout>
