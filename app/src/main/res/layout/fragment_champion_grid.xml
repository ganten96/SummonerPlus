<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="summoner.plus.ChampionGridFragment"
             android:id="@+id/ChampionFrame"
             android:background="#ff233f52">

    <GridView
        android:id="@+id/championList"
        android:layout_width="match_parent"
        android:columnWidth="90dp"
        android:layout_height="match_parent"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"/>

    <ImageView
        android:id="@+id/champThumbnail"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"/>

    <TextView
        android:id="@+id/championListName"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/champThumbnail"
        android:background="#ff233f52"
        android:textColor="#ffffffff"
        android:gravity="center_horizontal"/>

</RelativeLayout>
